<div class="h3">
	<h2><%= @butterfly.name %></h2>

	<img src="<%= @butterfly.image %>">
	<h3>Family: <em> <%= @butterfly.family %> </h3>
	
	<% if @butterfly.plant.id %>
		<a href="/plants/<%= @butterfly.plant.id %>" >
			<h3> Larval plant: <em> <%= @butterfly.plant.name %></em> </h3>
		</a>
	<% else %>
		<p> Larval plant is unknown. </p>
	<% end %>		


	<section class="butterfly">
		<a href="/butterflies/<%= @butterfly.id %>/delete">Delete</a>
		<a href="/butterflies/<%= @butterfly.id %>/edit">Edit</a>


	</section>
</div>
